{
    "xsappname": "ib-recap2023-demo",
    "tenant-mode": "dedicated",
    "description": "Security Profile of the IBsolution CAP Basic Application",
    "scopes": [
        {
            "name": "uaa.user",
            "description": "UAA"
        },
        {
            "name": "$XSAPPNAME.DemoAdminUser",
            "description": "Administrator"
        },
        {
            "name": "$XSAPPNAME.DemoBasicUser",
            "description": "Basic User"
        }
    ],
    "role-templates": [
        {
            "name": "Token_Exchange",
            "description": "UAA",
            "scope-references": [
                "uaa.user"
            ]
        },
        {
            "name": "DemoAdminUser",
            "description": "IBsolution CAP Admin User",
            "scope-references": [
                "$XSAPPNAME.DemoAdminUser"
            ]
        },
        {
            "name": "DemoBasicUser",
            "description": "IBsolution CAP Basic User",
            "scope-references": [
                "$XSAPPNAME.DemoBasicUser"
            ]
        }
    ],
    "oauth2-configuration": {
        "credential-types": [
            "binding-secret"
        ],
        "redirect-uris": [
            "https://*.cfapps.eu10.hana.ondemand.com/**",
            "http://localhost:4004/**"
        ]
    }
}